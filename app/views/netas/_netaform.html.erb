<%= form.label :title, "タイトル／キャッチフレーズ" %>
<%= form.text_field :title, :value => @neta.title, :id => 'neta_form_title', :minlength => '5', :maxlength => '30' %>
<%= form.label :content, "本文" %>
<%= form.rich_text_area :content, :value => @neta.content, :placeholder => '８００字以内' %>
<%= form.hidden_field :timestamp, :value => @stale_form_check_timestamp %>
<% if @qualified %>
  <%= form.label :title, "有料部分" %>
  <%= form.text_area :valuetext, placeholder: "有料部分（８００字以内）", :id => 'neta-form-text', :minlength => '20', :maxlength => '800' %>
<% end %>
<%= form.text_field :tags, :value => @current_tags, :autocomplete => 'off', :id => 'tag_post_field' %>
<%= form.label :price, "価格" %><br>
<% if @qualified %>
  <%= form.number_field :price, :id => 'neta-form-price', min: 0, step: 10, :value => 0 %>&nbsp;&nbsp;円
<% else %>
  <%= form.number_field :price, :id => 'neta-form-price', :readonly => true, :value => 0 %>&nbsp;&nbsp;円
<% end %>
<br>
<%= form.label :private_flag, "公開／非公開" %>
<%= form.select :private_flag, [['公開', false], ['非公開', true]], { include_blank: false, selected: @neta.private_flag }, { class: "browser-default", :id => "private_flag" } %>
<br>