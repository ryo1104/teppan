<%= javascript_pack_tag 'raty' %>

<% @page_title = "#"+@tag.hashname %>
<% breadcrumb :hashtag, @tag %>
<div class="page-body-container">
  <p><%= breadcrumbs separator: "  &rsaquo;  ", :class => "breadcrumbs custom" %></p>
  <div class="row">
    <div class="col s12 m8 neta-show">
      <% unless @netas.exists? %>
        <p> (ネタの投稿はまだありません) </p><br>
      <% else %>
        <h1 class="h1_class">#<%= @tag.hashname %></h1>
        <ul class="collection z-depth-1">
          <% @netas.each do |neta| %>
            <li class="collection-item avatar custom">
              <p>
              <%= link_to user_path(neta.user_id) do %>
              <%= image_pack_tag neta.user.avatar, {:class => "circle custom", :id => "mycircle"} %>
              <% end %>
              </p>
              <%= link_to neta_path(neta.id) do %>
                <p class="collection-item-title truncate"><%= remove_hashtags(neta.text) %></p>
                <p class="collection-item-text">
                <% unless neta.price == 0 %>
                  <span class="neta-price"><%= neta.price %>&nbsp;円&nbsp;&nbsp;</span>
                <% end %>
                </p>
                <% if neta.average_rate == "-" %>
                  <span class="star_rating" rating-data="0"></span>
                <% else %>
                  <span class="star_rating" rating-data="<%= neta.average_rate %>"></span>
                  <span class="star-rating-text">&nbsp;&nbsp;<%= neta.average_rate %></span>
                <% end %>
                &nbsp;&nbsp;&nbsp;
                <i class="material-icons comment custom">chat_bubble_outline</i>
                <span class="icon-side-count"><%= neta.reviews_count %></span>
                <p>
                  <% neta.hashtags.each do |tag| %>
                    <div class="chip custom"><%= link_to "#"+tag.hashname, "/neta/hashtag/#{tag.hashname}" %></div>
                  <% end %>
                </p>
                <div class="collection-item-footer">
                  <p class="neta-footer-text">
                    <%= atname(neta.user.nickname) %>&nbsp;&nbsp;
                    <%= neta.updated_at.to_s(:human) %>&nbsp;&nbsp;
                    <%= neta.pageviews_count %>&nbsp;views
                  </p>
                  <p class="neta-footer-icons">

                  </p>
                </div>
              <% end %>
            </li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>
</div>