<%= javascript_bundle_tag 'user' %>
<h1>プロフィール編集</h1>          
<%= form_with model: @user, local: true, method: :patch, :class => "user-edit-form" do |f| %>
  <div class="user-edit-form__upper">
    <div class="col s3 m3 user-edit-form__left">
      <%= f.label :image do %>
        <div class="user-edit-form__avatar-container">
          <% if @user.avatar.present? %>
            <%= image_tag @user.avatar.variant(resize_to_fill: [70, 70], gravity: "Center"), { :class => "user-edit-form__avatar-img" } %>
            <%= link_to "画像変更", user_avatar_path(@user.id), :method => :delete, :class => "user-edit-form__delete-avatar-link" %>
          <% else %>
            <%= image_bundle_tag "no_user_image.png", { :class => "user-edit-form__avatar-img" } %>
          <% end %>
        </div>
        <%= f.file_field :image, {:class => "js-user-edit-form__image-upload"} %>
      <% end %>
    </div>
    <div class="col s9 m9 user-edit-form__right">
      <div class="user-edit-form__nickname">
        <%= f.label :nickname, "ユーザー名", :class => "user-edit-form__nickname-label" %>
        <%= f.text_field :nickname, placeholder: @user.nickname, :class => "user-edit-form__nickname-input" %>
      </div>
      <div class="user-edit-form__birthdate">
        <%= f.label :birthdate, "生年月日", :class => "user-edit-form__birthdate-label" %><br>
        <%= f.date_field :birthdate, :class => "user-edit-form__birthdate-input" %>
      </div>
      <div class="user-edit-form__gender">
        <div class="user-edit-form__gender-message">性別</div>
        <%= f.radio_button :gender, 1, :style => "opacity: unset; position: relative;" %>
        <%= f.label :gender_1, "男性", :class => "user-edit-form__gender-label" %>
        <%= f.radio_button :gender, 2, :style => "opacity: unset; position: relative;" %>
        <%= f.label :gender_2, "女性", :class => "user-edit-form__gender-label" %>
        <%= f.radio_button :gender, 3, :style => "opacity: unset; position: relative;" %>
        <%= f.label :gender_3, "その他", :class => "user-edit-form__gender-label" %>
      </div>
    </div>
  </div>
  <div class="user-edit-form__lower">
    <div class="user-edit-form__introduction-area">
      <%= f.label :introduction, "プロフィール文", :class => "user-edit-form__introduction-label" %>
      <%= f.rich_text_area :introduction, :value => @user.introduction, :class => "user-edit-form__introduction-input" , :placeholder => '８００字以内' %>
    </div>
    <%= f.submit "更新", :class => "user-edit-form__submit btn waves-effect" %>
  </div>
<% end %>