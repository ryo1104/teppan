<%= javascript_bundle_tag 'user' %>
<h1>プロフィール編集</h1>
<%= form_with model: @user, local: true, :class => "user-profile-form", method: :patch, data: { 'form-data' => (@s3_direct_post.fields), 'url' => @s3_direct_post.url, 'host' => URI.parse(@s3_direct_post.url).host } do |f| %>
  <div class="user-profile-form__upper">
    <div class="col s4 m3 user-profile-form__left">
      <%= f.label :image do %>
        <div class="user-profile-form__avatar-container">
          <% if @user.avatar_img_url.present? %>
            <%= image_tag @user.avatar_img_url, { :class => "user-profile-form__avatar-img" } %><br>
            <%= link_to "画像変更", user_avatar_path(@user.id), :method => :delete, :class => "user-profile-form__delete-avatar-link" %>
          <% else %>
            <div class="user-profile-form__avatar-img-wrapper">
              <canvas id="js-user-avatar-canvas" class="user-profile-form__avatar-img" />
            </div>
            <%= f.file_field :avatar_img_url, :id => 'js-user-avatar-file_field', :class => 'user-profile-form__avatar-img-filefield' %>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="col s8 m9 user-profile-form__right">
      <div class="user-profile-form__nickname">
        <%= f.label :nickname, "ユーザー名", :class => "user-profile-form__nickname-label" %>
        <%= f.text_field :nickname, placeholder: @user.nickname, :class => "user-profile-form__nickname-input" %>
      </div>
      <div class="user-profile-form__birthdate">
        <%= f.label :birthdate, "生年月日", :class => "user-profile-form__birthdate-label" %><br>
        <%= f.date_field :birthdate, :class => "user-profile-form__birthdate-input" %>
      </div>
      <div class="user-profile-form__gender">
        <div class="user-profile-form__gender-message">性別</div>
        <%= f.radio_button :gender, 1, :style => "opacity: unset; position: relative;" %>
        <%= f.label :gender_1, "男性", :class => "user-profile-form__gender-label" %>
        <%= f.radio_button :gender, 2, :style => "opacity: unset; position: relative;" %>
        <%= f.label :gender_2, "女性", :class => "user-profile-form__gender-label" %>
        <%= f.radio_button :gender, 3, :style => "opacity: unset; position: relative;" %>
        <%= f.label :gender_3, "その他", :class => "user-profile-form__gender-label" %>
      </div>
    </div>
  </div>
  <div class="user-profile-form__lower">
    <div class="user-profile-form__introduction-area">
      <%= f.label :introduction, "プロフィール文", :class => "user-profile-form__introduction-label" %>
      <%= f.rich_text_area :introduction, :value => @user.introduction, :class => "user-profile-form__introduction-input" , :placeholder => '８００字以内' %>
    </div>
    <%= f.submit "更新", :class => "user-profile-form__submit btn waves-effect" %>
  </div>
<% end %>