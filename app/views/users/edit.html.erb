<% @page_title = "プロフィール変更" %>
<% breadcrumb :edit_user, current_user %>
<div class="page-body">
  <div class="row">
    <div class="col s12 m12 content">
      <div class="row user-edit">
        <% if @user.errors.any? %>
          <%= render :partial => "users/errorform" %>
        <% end %>
        <% if @user.nickname.present? %>
          <%= render :partial => "layouts/breadcrumbs" %>
          <% if @s3_direct_post.present? %>
            <%= render :partial => "users/form_with_avatar" %>
          <% else %>
            <%= render :partial => "users/form_without_avatar" %>
          <% end %>
        <% else %>
          <%= render :partial => "users/form_initial" %>
        <% end %>
      </div>
    </div>
  </div>
</div>