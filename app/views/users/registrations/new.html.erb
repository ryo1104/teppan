<% @page_title = "ユーザー登録" %>
<div class="page-body">
  <div class="row">
    <div class="col s12 m12 content">
      <h2>ユーザー登録</h2>
      <%= form_with model: @user, url: user_registration_path, :local => true, :class => 'user-register-new__form' do |f| %>
        <div class="user-register-new__field--error">
          <%= render :partial => "/users/shared/error_messages" %>
        </div>
        <div class="user-register-new__field">
          <%= f.label :email, :class => 'user-register-new__email-label' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "off", :class => 'user-register-new__email' %>
        </div>
        <div class="user-register-new__field">
          <%= f.label :password, :class => 'user-register-new__password-label' %>
          <% if @minimum_password_length %>
            <span class="user-register-new__password-message">(<%= @minimum_password_length %> 文字以上)</span>
          <% end %>
          <%= f.password_field :password, autocomplete: "off", :class => 'user-register-new__password' %>
        </div>
      
        <div class="user-register-new__field">
          <%= f.label :password_confirmation, :class => 'user-register-new__password-label' %>
          <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'user-register-new__password' %>
        </div>
        
        <div class="user-register-new__agreement">
          <%= f.label :agreement_terms do %>
            <%= f.check_box :agreement_terms, :class => 'reset-checkbox', :as => :boolean %>
            <span class="user-register-new__agreement-tag">
              <%= link_to '利用規約', userterm_path, method: :get %>・
              <%= link_to 'プライバシーポリシー', policy_path, method: :get %>に同意する
            </span>
          <% end %>
        </div>
        <%= f.submit "メールアドレスで登録する", :class => "user-register-new__login btn waves-effect" %>
      <% end %>
      <h2>他のアカウントで登録</h2>
      <%= render :partial => "/users/shared/oauth" %>
    </div>
  </div>
</div>
