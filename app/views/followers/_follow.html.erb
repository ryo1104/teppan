<% if user.is_followed_by(current_user.id) == true %>
  <%= link_to 'フォロー中', user_follower_path(user_id: user.id, id: current_user.id), {:method => :delete, :class => "follow-button", :remote => true} %>
<% else %>
  <%= link_to 'フォローする', user_followers_path(user.id), {:method => :post, :class => "follow-button-outline", :remote => true} %>
<% end %>