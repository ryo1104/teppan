<div class="page-body-container">
  <div class="row">
    <div class="col s12 m9 user-page">
      <h1 class="h1_class">身分証明書（コピー）登録</h1>
      <ul class="collection z-depth-1 user-page">
        <%= form_with model: [@account, @idcard], local: true do |f| %>
          <%= label_tag 'ファイル（JPGまたはPNG）' %><br>
          <%= f.file_field :image %>
          <br><br>
          <%= label_tag '表面／裏面' %><br>
          <%= f.select :frontback, [["表面","front"], ["裏面","back"]], {}, {:class => "browser-default"} %>
          <br>
          <%= f.submit %>
        <% end %>
      </ul>
    </div>
  </div>
</div>