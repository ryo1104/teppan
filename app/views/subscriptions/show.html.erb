<% breadcrumb :show_subscription, @user %>
<div class="page-body-container">
  <%= breadcrumbs separator: "  &rsaquo;  ", :class => "breadcrumbs custom" %>
  <div class="row">
    <div class="col s12 m9 user-page">
      <h1 class="h1_class">プラン内容</h1>
      <ul class="collection z-depth-1 user-page">
        <% if @trial_end_date.present?  %>
          無料体験終了：<%= @trial_end_date.strftime("%Y/%m/%d") %><br>
        <% end %>
        次回請求日：<%= Time.zone.at(@subscription_hash["current_period_end"].to_i).strftime("%Y/%m/%d") %><br>
        請求金額：<%= @subscription_hash["plan"]["amount"] %>円<br>
        請求先カード：<%= @card_hash["brand"] %>&nbsp;&nbsp;
                      <%= @card_hash["exp_month"] %>/<%= @card_hash["exp_year"] %>&nbsp;&nbsp;
                      *******<%= @card_hash["last4"] %><br>
        <br>
        <% if false %>
        <p>subscription details = <%= @subscription_hash %></p>
        <p>card details = <%= @card_hash %></p>
        <br>
        <% end %>
      </ul>
    </div>
  </div>
</div>