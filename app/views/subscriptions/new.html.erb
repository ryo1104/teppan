<% breadcrumb :new_subscription, @user %>
<div class="page-body-container">
  <p><%= breadcrumbs separator: "  &rsaquo;  ", :class => "breadcrumbs custom" %></p>
  <div class="row">
    <div class="col s12 m8 neta-new">
      <h1 class="h1_class">有料プラン申し込み</h1>
      <ul class="collection z-depth-1 user-page">
        月額使用料：３００円<br>
        トライアル期間：１ヶ月<br><br>
        <% if @cards %>
          <% @cards.each do |card| %>
            <%= card["brand"] %>&nbsp;&nbsp;
            <%= "******"+card["last4"] %>&nbsp;&nbsp;
            <%= form_with url: user_subscriptions_path(@user.id), local: true, method: :post do |f| %>
              <%= f.hidden_field :card_id, :value => card["id"] %>
              <%= button_tag :type => "submit", class: "btn btn-primary withripple custom" do %>
                <i class="material-icons"></i>このカードで申込み
              <% end %><br><br>
            <% end %>&nbsp;&nbsp;
          <% end %>
          <%= form_with url: user_subscriptions_path(@user.id), local: true, method: :post do |f| %>
            <script
              src="https://checkout.stripe.com/checkout.js" class="stripe-button"
              data-key="pk_test_p2Y9RrxY6Gjj2Bi43zhElMTp00hQwI9bNL"
              data-locale="ja"
              data-label="別のカードで申込み"
              data-panel-label="申し込み"
              data-email="<%= @user.email %>">
            </script>
          <% end %>
        <% else %>
          <%= form_with url: user_subscriptions_path(@user.id), local: true, method: :post do |f| %>
            <script
              src="https://checkout.stripe.com/checkout.js" class="stripe-button"
              data-key="pk_test_p2Y9RrxY6Gjj2Bi43zhElMTp00hQwI9bNL"
              data-locale="ja"
              data-label="クレジットカードを使用"
              data-panel-label="申し込み"
              data-email="<%= @user.email %>">
            </script>
          <% end %>
        <% end %>
        <% if false %>
        <p>customer = <%= @customer_hash %></p>
        <br><br>
        <p>cards = <%= @cards %></p>
        <br>
        <% end %>
      </ul>
    </div>
  </div>
</div>