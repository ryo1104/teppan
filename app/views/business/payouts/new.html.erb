<div class="page-body">
  <div class="row">
    <div class="col s12 m9 neta-new">
      <h1 class="h1_class">銀行振込</h1>
      <ul class="collection z-depth-1">
        <li class="collection-item">
          <%= form_with url: account_payouts_path(@account.id), local: true, method: :post do |f| %>
            振込可能額：&nbsp;&nbsp;<b><%= @balance["available"][0]["amount"] %>&nbsp;円</b><br><br>
            振込金額<%= f.number_field :amount, style: 'width: 25%;' %>円<br><br>
            
            <% if @bank_info["account_number"].present? %>
              <b>振込先</b><br>
              金融機関名：<%= @bank_info["bank_name"] %><br>
              支店名　　：<%= @bank_info["branch_name"] %><br>
              口座番号　：<%= @bank_info["account_number"] %><br>
              口座名義　：<%= @bank_info["account_holder_name"] %><br>
              <%= link_to '口座変更', edit_externalaccount_path(@account.externalaccount.id), :class => "button-points" %><br>
            <% end %><br>
            
            <%= button_tag :type => "submit", class: "btn btn-primary withripple custom" do %>
              <i class="material-icons"></i>振込実行
            <% end %><br><br>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>