<div class="page-body-container">
  <div class="row">
    <div class="col s12 m9 user-page">
      <h1 class="h1_class"><%= @direction %>(<%= @follow_list.count %>)</h1>
      <% if @follow_list %>
        <ul class="collection">
          <% @follow_list.each do |following_user| %>
            <li class="collection-item avatar custom">
              <%= link_to user_path(following_user.id) do %>
                <% if following_user.avatar.present? %>
                  <%= image_tag following_user.avatar, {:class => "circle", :id => "follow-list-image"} %>
                <% else %>
                  <%= image_bundle_tag "no_user_image.png", {:class => "circle", :id => "follow-list-image"} %>
                <% end %>
                <div class="collection-item-text">
                  <%= atname(following_user.nickname) %><br>
                  <p>フォロワー&nbsp;&nbsp;<b><%= following_user.follows.count %></b></p>
                  <% if following_user.average_rate == 0 %>
                    平均評価&nbsp;<span class="star_rating" rating-data="0"></span>&nbsp;
                    <span class="star-rating-text-user-page"><%= following_user.average_rate %></span>
                  <% else %>
                    平均評価&nbsp;<span class="star_rating" rating-data="<%= following_user.average_rate %>"></span>&nbsp;
                    <span class="star-rating-text-user-page"><%= following_user.average_rate %></span>
                  <% end %>
                </div>
              <% end %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p>（ユーザーはいません）</p><br><br>
      <% end %>
    </div>
  </div>
</div>