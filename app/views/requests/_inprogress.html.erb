<div class="row">
  <div class="col s12 m9 offset-m1">
    <h1 class="h1_class">リクエスト</h1>
    <ul class="collection z-depth-1">
      <li class="collection-item avatar">
        <p>
          <%= image_tag @request.user.avatar, {:class => "circle"} %>
          <%= link_to @request.user.nickname, user_path(@request.user_id) %>
        </p>
        <p><%= @request.text %></p><br>
        <p>最終納期：<%= @request.finaldate.strftime('%Y/%m/%d') %></p>
        <p>報酬：<%= @request.price %></p>
        <p>受注者：<%= link_to @assignee.nickname, user_path(@assignee.id) %></p>
      </li>
    </ul>
  </div>
</div>
<div class="row">
  <% if @viewable == true %>
  <div class="s12 m9 offset-m1">
    <% if @is_myrequest == true %>
      <% if @request.editable(current_user.id) == true %>
        <%= link_to '編集', edit_request_path(@request.id) %>
      <% end %>
      <% if @neta.present? %>
        <%= @neta.text %><br>
        <p>作者：<%= link_to @assignee.nickname, user_path(@assignee.id) %></p>
        <%= form_for @request do |r| %>
          <%= r.hidden_field :nextdate, :value => @request.nextdate %>
          <%= r.hidden_field :price, :value => @request.price %>
          <%= r.hidden_field :status, :value => "FINAL" %>
          <%= r.hidden_field :assignee_id, :value => @assignee.id %>
          <%= r.submit "依頼を完了", class: "btn btn-primary withripple custom" %>
        <% end %>
      <% end %>
    <% end %>
    <% if @assignee.id == current_user.id %>
      <% if @neta.present? %>
        <%= @neta.text %><br>
        <%= link_to '編集', edit_request_neta_path(@request.id, @neta.id), {:class => 'btn btn-primary withripple custom' } %><br>
      <% else %>
        <%= link_to new_request_neta_path(@request.id), {:class => 'btn btn-primary withripple custom' } do %>
          <i class="material-icons left">create</i>
          <span>文章を作成</span><br>
        <% end %>
      <% end %>
    <% end %>
    </div>
    <div class="col s12 m7 offset-m1">
      <% @comments.each do |comment| %>
        <%= link_to comment.user.nickname, user_path(comment.user_id) %><br>
        <%= comment.text %><br><br>
      <% end %>
      <%= form_for [@request, @newcomment] do |f| %>
        <%= f.text_area :text, placeholder: 'こちらに書いて下さい', style: 'width: 60%; height: 70px;' %><br>
        <%= f.submit "コメント", class: "btn btn-primary withripple custom" %>
      <% end %>
    </div>
  <% else %>
    <div class="col s12 m7 offset-m1">
      <%= @not_viewable_message %><br><br>
      <%= link_to "戻る", requests_path %>
    </div>
  <% end %>
</div>
