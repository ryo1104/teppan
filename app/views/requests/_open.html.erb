<div class="row">
  <div class="col s12 m9 offset-m1">
    <h1 class="h1_class">リクエスト</h1>
    <ul class="collection z-depth-1">
      <li class="collection-item avatar">
        <p>
          <%= image_tag @request.user.avatar, {:class => "circle"} %>
          <%= link_to atname(@request.user.nickname), user_path(@request.user_id) %>
        </p>
        <p><%= @request.text %></p><br>
        <p><b><%= @status %></b></p>
        <p>応募期限：<%= @request.nextdate.strftime('%Y/%m/%d') %></p>
        <p>希望納期：<%= @request.finaldate.strftime('%Y/%m/%d') %></p>
        <p>報酬：<%= @request.price %></p>
        <p>最終更新：<%= @request.updated_at.strftime("%Y年%m月%d日 %H:%M")%></p>
        <% unless @i_am == "requestor" %>
          <% if @interest.present? %>
            <%= link_to request_interest_path(@request.id, @interest.id), {:method => :delete, :class => 'btn btn-primary withripple custom bookmark' } do %>
              <i class="material-icons bookmark">bookmark_border</i>
            <% end %>
          <% else %>
            <%= link_to request_interests_path(@request.id), {:method => :post, :class => 'btn btn-primary withripple custom bookmark' } do %>
              <i class="material-icons bookmark">bookmark</i>
            <% end %>
          <% end %>
        <% else %>
          <% if @request.editable(current_user.id) == true %>
            <br>
            <%= link_to '編集', edit_request_path(@request.id) %>
          <% end %>
          <% if @neta.present? %>
            <%= link_to '依頼を完了', request_neta_path(@request.id, @neta.id), {:class => 'btn btn-primary withripple custom' } %>
          <% end %>
        <% end %>
        <div class="line-it-button" data-lang="ja" data-type="share-a" data-ver="2" data-url="#{<%= request_path(@request.id) %>}" style="display: none;"></div>
        <script src="https://d.line-scdn.net/r/web/social-plugin/js/thirdparty/loader.min.js" async="async" defer="defer"></script>&nbsp;&nbsp;
        <a href="https://twitter.com/share?ref_src=twsrc%5Etfw" class="twitter-share-button" data-show-count="false">Tweet</a><script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
      </li>
    </ul>
  </div>
</div>
<div class="row">
  <div class="col s12 m9 offset-m1">
    <h1 class="h1_class">オファー</h1>
      <% if @offers.present? %>
        <ul class="collection z-depth-1">
        <% @offers.each do |offer| %>
          <li class="collection-item avatar">
            <p>
              <%= image_tag offer.user.avatar, {:class => "circle"} %>
              <%= link_to atname(offer.user.nickname), user_path(offer.user_id) %>
            </p>
            <p>
              価格：<%= offer.price %>&nbsp;&nbsp;
              所要日数：<%= offer.required_days %>日
            </p>
            <p class="offer-index-text truncate">
              <%= offer.text %>
            </p>
            <% if @i_am == "requestor" || offer.user_id == current_user.id %>
              <p>
                <%= link_to '詳細', offer_path(offer.id) %>&nbsp;&nbsp;
                <% if offer.user_id == current_user.id %>
                  <%= link_to '編集', edit_offer_path(offer.id) %>
                <% end %>
              </p>
            <% end %>
          </li>
        <% end %>
        </ul>
      <% else %>
        <p>（応募はありません）</p><br>
      <% end %>
    <% if user_signed_in? && @i_am != "requestor" && @offer_posted == false %>
    <div class="fixed-action-btn horizontal">
      <%= link_to new_request_offer_path(@request.id), {:class => 'btn-floating light-green darken-2' } do %>
        <i class="material-icons">create</i>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col s12 m9 offset-m1">
    <div class="comment">
      <h1 class="h1_class">リクエスト内容へのQ&A</h1>
      <ul class="collection z-depth-1">
        <% @comments.each do |comment| %>
          <li class="collection-item avatar" >
            <%= image_tag comment.user.avatar, {:class => "circle"} %>
            <%= link_to atname(comment.user.nickname), user_path(comment.user_id) %><br>
            <%= comment.text %><br>
            <% if comment.user_id == current_user.id %>
              <p>
                <%= link_to '編集', edit_request_comment_path(@request.id, comment.id) %>&nbsp;&nbsp;
                <%= link_to '削除', request_comment_path(@request.id, comment.id), {:method => :delete, :data => {:confirm => "本当に削除しますか？"}} %>
              </p>
            <% end %>
          <li>
        <% end %>
        <li class="collection-item" >
          <%= form_for [@request, @newcomment] do |f| %>
            <%= f.text_area :text, placeholder: 'こちらに書いて下さい', style: 'width: 100%; height: 70px;' %><br>
            <%= f.submit "コメント", class: "btn btn-primary withripple custom" %>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>