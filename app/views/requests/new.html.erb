<div class="page-body-container">
  <div class="row">
    <div class="col s12 m9 offset-m1">
      <div class="card white">
        <div class="card-content black-text">
          <%= form_for @request do |f| %>
            <p>タイトル</p><%= f.text_field :title, placeholder: "４０文字以内", maxlength: 40 %>
            <p>依頼内容</p><%= f.text_area :text, style: 'width: 100%; height: 150px;', placeholder: "２００文字以内", maxlength: 200 %>
            <p>予算</p><%= f.number_field :price, min: 0, step: 10, :value => 0 %>
            <p>応募期限</p><%= f.date_field :nextdate %>
            <p>希望納期</p><%= f.date_field :finaldate %><br>
            <%= f.hidden_field :status, :value => "OPEN" %><br>
            <%= button_tag :type => "submit", class: "btn btn-primary withripple custom" do %>
              <i class="material-icons left">create</i>投稿
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>