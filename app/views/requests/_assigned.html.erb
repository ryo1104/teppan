<div class="row">
  <div class="col s12 m9 offset-m1">
    <h1 class="h1_class">リクエスト</h1>
    <ul class="collection z-depth-1">
      <li class="collection-item avatar">
        <p>
          <%= image_tag @request.user.avatar, {:class => "circle"} %>
          <%= link_to atname(@request.user.nickname), user_path(@request.user_id) %>
        </p>
        <p><%= @request.text %></p>
        <p><b><%= @status %></b></p>
        <p>(<%= link_to atname(@assignee.nickname), user_path(@assignee.id) %>さんへ依頼中、受託待ち)</p>
        <p>受託期限：<%= @request.nextdate.strftime('%Y/%m/%d') %></p>
        <p>最終納期：<%= @request.finaldate.strftime('%Y/%m/%d') %></p>
        <p>報酬：<%= @request.price %></p>
        <p>最終更新：<%= @request.updated_at.strftime("%Y年%m月%d日 %H:%M")%></p>
        <% if @i_am == "requestor" %>
          <% if @request.editable(current_user.id) == true %>
            <%= link_to '編集', edit_request_path(@request.id) %>
          <% end %>
        <% end %>
      </li>
    </ul>
  </div>
</div>
<% if @viewable == true %>
<div class="row">
  <div class="col s12 m9 offset-m1">
    <% if @assignee.id == current_user.id %>
      <%= form_for @request do |r| %>
        <%= r.hidden_field :status, :value => "IN_PROGRESS" %>
        <%= r.submit "依頼を引き受ける", class: "btn btn-primary withripple custom" %>
      <% end %><br>
    <% end %>
  </div>
</div>
<% else %>
<div class="row">
  <div class="col s12 m9 offset-m1">
    <div class="comment">
      <h1 class="h1_class">リクエスト内容のQ&A</h1>
      <ul class="collection z-depth-1">
        <% @comments.each do |comment| %>
          <li class="collection-item avatar" >
            <%= image_tag comment.user.avatar, {:class => "circle"} %>
            <%= link_to atname(comment.user.nickname), user_path(comment.user_id) %><br>
            <%= comment.text %><br><br>
          </li>
        <% end %>
        <li class="collection-item" >
          <%= form_for [@request, @newcomment] do |f| %>
            <%= f.text_area :text, placeholder: '質問・コメント', style: 'width: 100%; height: 70px;' %><br>
            <%= f.submit "コメント", class: "btn btn-primary withripple custom" %>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>
<% end %>
