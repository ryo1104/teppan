<div class="row">
  <div class="col s12 m9 offset-m1">
    <div class="card white">
      <div class="card-content black-text">
        <%= form_for @request do |f| %>
          <p>トピック名</p><%= f.text_field :title, placeholder: "トピック名", maxlength: 40 %>
          <p>依頼内容</p><%= f.text_area :text, style: 'width: 100%; height: 200px;', maxlength: 200 %>
          <p>予算：</p><%= f.number_field :price, min: 0, step: 10 %>
          <p>応募期限：</p><%= f.date_field :nextdate %>
          <p>希望納期：</p><%= f.date_field :finaldate %><br>
          <%= button_tag :type => "submit", class: "btn btn-primary withripple custom" do %>
            <i class="material-icons left">refresh</i>更新
          <% end %>
          <%= link_to request_path(@request.id), {:method => :delete, :class => 'btn btn-primary withripple custom', data: { confirm: "本当にリクエストを削除しますか？" }} do %>
            <i class="material-icons left">delete</i>
            <span>削除</span><br>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>