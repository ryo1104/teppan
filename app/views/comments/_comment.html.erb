<li class="collection-item custom" >
  <p class="comment-text"><%= comment.text %></p>
  <% if user_signed_in? && comment.user_id == current_user.id %>
    <span class="topic-footer-deletelink">
      <%= link_to '削除', comment_path(comment.id), {:method => :delete, :data => {:confirm => "本当に削除しますか？"}} %>
    </span>
  <% end %>
  <div class="collection-item-footer">
    <p class="indexitem-footer-text">
      <%= link_to user_path(comment.user.id) do %>
        <% if comment.user.avatar.present? %>
          <%= image_tag comment.user.avatar, {:class => "circle", :id => "index-author-image"} %>
        <% else %>
          <%= image_bundle_tag "no_user_image.png", {:class => "circle", :id => "index-author-image"} %>
        <% end %>
      <% end %>
      <%= atname(comment.user.nickname) %>&nbsp;&nbsp;
      <%= comment.updated_at.to_s(:human) %>&nbsp;&nbsp;&nbsp;
    </p>
    <p class="topic-footer-icons">
      <% if user_signed_in? %>
        <span id="likes_buttons_<%= comment.class.name.downcase %>_<%= comment.id %>">
          <%= render partial: 'likes/like', locals: { likeable: comment } %>
        </span>
      <% else %>
        <i class="material-icons like basic">favorite_border</i>
        <span class="icon-side-count"><%= comment.likes_count %></span>&nbsp;&nbsp;
      <% end %>
    </p>
  </div>
</li>