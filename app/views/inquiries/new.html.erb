<% @page_title = "お問い合わせ" %>
<div class="page-body">
  <div class="row">
    <div class="col s12 m6 content">
      <h1>お問い合わせ</h1>
      <div class="inquiries-new collection">
        <%= form_with model: @inquiry, url: inquiries_path, local: true, method: :post, :class => "inquiries-new__form" do |f| %>
          <% if @inquiry.errors.any? %>
            <%= render :partial => "inquiries/errorform" %>
          <% end %>
          <div class="inquiries-new__email">
            <%= f.label :email, 'お客様（返信先）メールアドレス', :class => "inquiries-new__email-label" %>
            <%= f.email_field :email, :class => "inquiries-new__email-input" %>
          </div><br>
          <div class="inquiries-new__message">
            <%= f.label :message, 'お問い合わせ内容', :class => "inquiries-new__message-label" %>
            <%= f.text_area :message, maxlength: 400, :class => "inquiries-new__message-input" %>
          </div><br>
          <%= button_tag :type => "submit", data: {disable_with: '送信中...'}, :class => "inquiries-new__submit btn waves-effect" do %>
            <i class="inquiries-new__submit material-icons left">send</i>送信
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>