<% @page_title = "違反報告・ブロック" %>
<div class="page-body">
  <div class="row">
    <div class="col s12 m9 show">
      <h1>違反報告</h1>
      <div class="card z-depth-0">
        <%= form_for [@user, @violation] do |f| %>
          <p>報告対象ユーザー：<%= link_to @user.nickname, user_path(@user.id) %></p>
          <p>違反内容</p><%= f.text_area :text, style: 'width: 100%; height: 200px;', placeholder: "４００字以内", maxlength: 400 %>
          <%= f.check_box :block, :class => 'reset-checkbox', :as => :boolean, :required => true %>
          <%= f.label :block, 'ユーザーをブロック' %>
          </p><br>
          <%= f.submit "報告する", class: "btn btn-primary withripple custom" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

