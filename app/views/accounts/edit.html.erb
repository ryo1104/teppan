<% @page_title = "お客様情報の入力" %>
<% breadcrumb :edit_account, @account %>
<div class="page-body">
  <div class="row">
    <div class="col s12 m6 content">
      <div class="row content-header">
        <%= render partial: "layouts/breadcrumbs" %>
      </div> 
      <div class="row account-edit">
        <h1>お客様情報</h1>
        <%= form_with model: @account_form, method: :patch, url: confirm_account_path, local: true, :class => "account-edit__form" do |form| %>
          <% if @account_form.errors.any? %>
            <%= render :partial => "accounts/errorform" %>
          <% end %>
          <input type="hidden", name="mode", value="edit" >
          <%= render :partial => "accountform", locals: { f: form, user: @account.user } %>
        <% end %>
      </div>
    </div>
  </div>
</div>