<% @page_title = "ご本人様情報の入力" %>
<% breadcrumb :edit_account, @account %>
<div class="page-body">
  <%= breadcrumbs separator: "  &rsaquo;  ", :class => "breadcrumbs-tp" %>
  <div class="row">
    <div class="col s12 m9 user-page">
      <h1>お客様情報</h1>
      <div class="collection z-depth-0 account-form">
        <%= form_with model: @account, local: true, method: :patch, url: {action: 'confirm'} do |form| %>
          <div class="col s12 m12" id="account-form-field-row">
            <% if @account.errors.any? %>
              <%= render :partial => "errorform" %>
            <% end %>
          </div>
          <input type="hidden", name="mode", value="edit" >
          <%= render :partial => "accountform", locals: { f: form, user: @account.user } %>
        <% end %>
      </div>
    </div>
  </div>
</div>