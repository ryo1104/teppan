<% @page_title = "確認｜お客様情報" %>
<div class="page-body">
  <div class="row">
    <div class="col s12 m6 content">
      <div class="row content-header">
        <div class="account-confirm__dm-header"></div>
      </div> 
      <div class="row account-confirm">
        <h1>お客様情報の確認</h1>
        <div class="account-confirm__message">下記内容にお間違いがないかご確認ください。</div>
        <div class="account-confirm__show-info collection">
          <div class="row account-confirm__name">
            <div class="col s4 m4">お名前（漢字）</div><div class="col s8 m8">：<%= @account.last_name_kanji %>&nbsp;<%= @account.first_name_kanji %></div>
          </div>
          <div class="row account-confirm__name">
            <div class="col s4 m4">お名前（カナ）</div><div class="col s8 m8">：<%= @account.last_name_kana %>&nbsp;<%= @account.first_name_kana %></div>
          </div>
          <div class="row account-confirm__email">
            <div class="col s4 m4">メールアドレス</div><div class="col s8 m8">：<%= @account.email %></div>
          </div>
          <div class="row account-confirm__phone">
            <div class="col s4 m4">お電話番号</div><div class="col s8 m8">：<%= @account.national_phone_number %></div>
          </div>
          <div class="row account-confirm__gender">
            <div class="col s4 m4">性別</div>
            <div class="col s8 m8">：
              <%= "男性" if @account.gender == "male" %>
              <%= "女性" if @account.gender == "female" %>
            </div>
          </div>
          <div class="row account-confirm__birthdate">
            <div class="col s4 m4">生年月日</div><div class="col s8 m8">：<%= @account.birthdate %></div>
          </div>
          <div class="row account-confirm__address">
            <div class="col s4 m4">ご住所</div>
            <div class="col s8 m8 account-confirm__address-info">
              <%= @account.postal_code %><br>
              <%= @account.state %>
              <%= @account.city %><br>
              <%= @account.town %>
              <%= @account.kanji_line1 %>
              <%= @account.kanji_line2 %><br>
            </div>
          </div>
          <div class="row account-confirm__user-agreement">
            <div class="col s4 m4">利用規約</div>
            <div class="col s8 m8">：<%= @account.user_agreement? ? "同意する" : "同意しない" %></div>
          </div>
        </div>

        <% if @mode == "new" %>
          <%= form_with model: [@user, @account], local: true, method: :post do |f| %>
            <%= f.hidden_field :last_name_kanji, :value => @account.last_name_kanji %>
            <%= f.hidden_field :last_name_kana, :value => @account.last_name_kana %>
            <%= f.hidden_field :first_name_kanji, :value => @account.first_name_kanji %>
            <%= f.hidden_field :first_name_kana, :value => @account.first_name_kana %>
            <%= f.hidden_field :gender, :value => @account.gender %>
            <%= f.hidden_field :email, :value => @account.email %>
            <%= f.hidden_field :birthdate, :value => @account.birthdate %>
            <%= f.hidden_field :postal_code, :value => @account.postal_code %>
            <%= f.hidden_field :state, :value => @account.state %>
            <%= f.hidden_field :city, :value => @account.city %>
            <%= f.hidden_field :town, :value => @account.town %>
            <%= f.hidden_field :kanji_line1, :value => @account.kanji_line1 %>
            <%= f.hidden_field :kanji_line2, :value => @account.kanji_line2 %>
            <%= f.hidden_field :kana_line1, :value => @account.kana_line1 %>
            <%= f.hidden_field :kana_line2, :value => @account.kana_line2 %>
            <%= f.hidden_field :phone, :value => @account.phone %>
            <%= f.hidden_field :user_agreement, :value => @account.user_agreement %>
            <%= f.submit '入力画面に戻る', name: 'back', :class => "account-confirm__submit btn waves-effect" %>&nbsp;&nbsp;
            <%= f.submit '保存する', data: {disable_with: '保存中...'}, :class => "account-confirm__submit btn waves-effect" %>
          <% end %>
        <% end %>
      
        <% if @mode == "edit" %>
          <%= form_with model: @account, local: true, method: :patch do |f| %>
            <%= f.hidden_field :last_name_kanji, :value => @account.last_name_kanji %>
            <%= f.hidden_field :last_name_kana, :value => @account.last_name_kana %>
            <%= f.hidden_field :first_name_kanji, :value => @account.first_name_kanji %>
            <%= f.hidden_field :first_name_kana, :value => @account.first_name_kana %>
            <%= f.hidden_field :gender, :value => @account.gender %>
            <%= f.hidden_field :email, :value => @account.email %>
            <%= f.hidden_field :birthdate, :value => @account.birthdate %>
            <%= f.hidden_field :postal_code, :value => @account.postal_code %>
            <%= f.hidden_field :state, :value => @account.state %>
            <%= f.hidden_field :city, :value => @account.city %>
            <%= f.hidden_field :town, :value => @account.town %>
            <%= f.hidden_field :kanji_line1, :value => @account.kanji_line1 %>
            <%= f.hidden_field :kanji_line2, :value => @account.kanji_line2 %>
            <%= f.hidden_field :kana_line1, :value => @account.kana_line1 %>
            <%= f.hidden_field :kana_line2, :value => @account.kana_line2 %>
            <%= f.hidden_field :phone, :value => @account.phone %>
            <%= f.hidden_field :user_agreement, :value => @account.user_agreement %>
            <%= f.submit '入力画面に戻る', name: 'back', :class => "account-confirm__submit btn waves-effect" %>&nbsp;&nbsp;
            <%= f.submit '保存する', data: {disable_with: '保存中...'}, :class => "account-confirm__submit btn waves-effect" %>
          <% end %>
        <% end %>
        
      </div>
    </div>
  </div>
</div>