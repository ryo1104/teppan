<div class="row">
  <div class="col s12 m6">
    <div class="card white">
      <div class="card-content black-text">
        <%= form_for [@request, @offer], :url => {:action => 'update'} do |f| %>
          <p>所要日数</p><%= f.number_field :required_days, min: 1, step: 1 %>
          <p>価格</p><%= f.number_field :price, min: 0, step: 10 %>
          <p>コメント：</p><%= f.text_area :text, style: 'width: 100%; height: 100px;' %>
          <br>
          <%= button_tag :type => "submit", class: "btn btn-primary withripple custom" do %>
            <i class="material-icons left">refresh</i>更新
          <% end %>
          <%= link_to offer_path(@offer.id), {:method => :delete, :class => 'btn btn-primary withripple custom', data: { confirm: "本当にオファーを削除しますか？" }} do %>
            <i class="material-icons left">delete</i>
            <span>削除</span><br>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>