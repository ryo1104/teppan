<% @page_title = "新規トピック" %>
<% breadcrumb :new_topic %>
<div class="page-body-container">
  <p><%= breadcrumbs separator: "  &rsaquo;  ", :class => "breadcrumbs custom" %></p>
  <div class="row topic-form">
    <div class="col s12 m8 topic-show">
      <h1 class="h1_class">新規トピック</h1>
      <ul class="collection z-depth-1">
        <li class="collection-item">
          <%= form_for @topic do |f| %>
            <% if @topic.errors.any? %>
              <%= render :partial => "errorform" %>
            <% end %>
            <p>タイトル</p><%= f.text_field :title, placeholder: "３０字以内", maxlength: 30 %>
            <p>内容</p><%= f.text_area :text, style: 'width: 100%; height: 200px;', placeholder: "２００字以内", maxlength: 200 %>
            <br>
            <%= button_tag :type => "submit", class: "btn btn-primary withripple custom" do %>
              <i class="material-icons left">create</i>投稿
            <% end %>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>