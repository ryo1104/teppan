<%= form.label :title, "タイトル" %>
<%= form.text_field :title, :maxlength => '30' %>
<p>
<%= form.label :header_image, "ヘッダー画像" %><br>
  <% if @topic.header_image.attached? %>
    <%= @topic.header_image.filename %>&nbsp;&nbsp;
    <%= link_to "削除", topic_header_image_path(@topic.id), :method => :delete %>
    <%= image_tag @topic.header_image, :width => '100%' %>
  <% else %>
    <%= form.file_field :header_image, :class => 'file-field custom' %>
  <% end %>
</p>
<%= form.label :content, "本文" %>
<%= form.rich_text_area :content %><br>